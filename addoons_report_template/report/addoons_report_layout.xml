<odoo>
    <data>

        <record id="paperformat_addoons_report" model="report.paperformat">
            <field name="name">ADDOONS REPORT A4 VERTICALE</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">35</field>
            <field name="margin_bottom">68</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">150</field>
        </record>

        <template id="external_layout">
            <!-- Multicompany -->
            <t t-if="not o and doc">
                <t t-set="o" t-value="doc"/>
            </t>
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <t t-call="addoons_report_template.external_layout_header" />
            <t t-raw="0" />
            <t t-call="addoons_report_template.external_layout_footer" />
        </template>

        <template id="external_layout_header">
            <div class="header">
                <div class="row" style="border-bottom: solid 1px #e6e6e6; padding-bottom: 20px;">
                    <div class="col-xs-3">
                        <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 80px;"/>
                    </div>
                </div>
            </div>
        </template>


        <template id="external_layout_footer">
            <div class="footer" style="margin:0 !important; padding:0 !important;">
                <div id="ad_footer" style="background-color:red; width:100%; height: 450px; background: url('/addoons_report_template/static/src/img/footer.png') no-repeat; background-position:center; background-size: 100%;">
