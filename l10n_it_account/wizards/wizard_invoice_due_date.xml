<odoo>
    <record id="addoons_view_account_invoice_due_date" model="ir.ui.view">
        <field name="name">view_account_invoice_due_date</field>
        <field name="model">wizard.invoice.due.date</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date_due" string="Nuova Data Scadenza"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Assegna" name="set_invoice_due_date" type="object" default_focus="1" class="btn-primary"/>
                    <button string="Annulla" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window name="Imposta Data Scadenza"
                res_model="wizard.invoice.due.date"
                src_model="account.invoice"
                view_mode="form"
                target="new"
                key2="client_action_multi"
                id="action_invoice_due_date"
                view_id="addoons_view_account_invoice_due_date"/>
</odoo>